@model IEnumerable<DiChoSaiGon.Models.Account>

@{
	ViewData["Title"] = "Danh sách tài khoản quản trị";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
	<h2 class="header-title"></h2>
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
			@*<a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index">Apps</a>*@
			<span class="breadcrumb-item active">Danh sách tài khoản</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<div class="row m-b-30">
			<div class="col-lg-8">
				<div class="d-md-flex">
					<div class="m-b-10 m-r-15">
						<select class="custom-select" id="idrole" name="idrole" style="min-width: 350px;" asp-items="ViewBag.QuyenTruyCap">
							<option value="0" disabled selected>Chọn quyền truy cập </option>
						</select>
					</div>
					<div class="m-b-10">
						<select class="custom-select" id="idstatus" name="idstatus" style="min-width: 350px;" asp-items="ViewBag.IsTrangThai">
							<option value="" disabled selected>Chọn trang thái </option>
						</select>
					</div>
				</div>
			</div>
		</div>
		<div class="table-responsive">
			<table class="table table-hover e-commerce-table">
				<thead>
					<tr>
						<th>ID</th>
						<th>Họ và Tên</th>
						<th>Email</th>
						<th>Số điện thoại</th>
						<th>Lần đăng nhập cuối</th>
						<th>Quyền truy cập</th>
						<th>Trạng Thái </th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@if (Model != null)
					{
						foreach (var item in Model)
						{
							<tr>
								<td>
									@item.AccountId
								</td>
								<td>
									<div class="d-flex align-items-center">
										<img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
										<h6 class="m-b-0 m-l-10">@item.FullName</h6>
									</div>
								</td>
								<td>@item.Email</td>
								<td>@item.Phone</td>
								<td>@item.LastLogin</td>
								<td>@item.Role.Description</td>
								<td>
									@if (item.Active == true)
									{
										<div class="d-flex align-items-center">
											<div class="badge badge-success badge-dot m-r-10"></div>
											<div>Active</div>
										</div>
									}
									else
									{
										<div class="d-flex align-items-center">
											<div class="badge badge-success badge-dot m-r-10"></div>
											<div>Block</div>
										</div>
									}
								</td>
								<td>
									<a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Details" asp-route-id="@item.AccountId">View</a>
									<a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminAccounts" asp-action="Edit" asp-route-id="@item.AccountId">Edit</a>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
